@page "{id:int}"
@model ProdutoApp.Pages.Produtos.DeleteModel

<h1>Excluir Produto</h1>

<h3>Tem certeza que deseja excluir este produto?</h3>

<div>
    <h4>@Model.Produto.Nome</h4>
    <p>@Model.Produto.Descricao</p>
    <p>Preço: @Model.Produto.Preco.ToString("C")</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Produto.Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-page="Index" class="btn btn-secondary">Cancelar</a>
</form>
